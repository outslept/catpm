{
  "name": "catpm",
  "version": "0.0.0",
  "description": "pnpm catalog package manager",
  "type": "module",
  "bin": {
    "catpm": "./bin/catpm.js",
    "catpm-bun": "./bin/catpm-bun.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "format:ci": "prettier --check .",
    "format": "prettier --format .",
    "lint:ci": "eslint --cache .",
    "lint": "eslint --cache --fix .",
    "test:ci": "vitest run --reporter=default",
    "test:dev": "vitest run",
    "test": "vitest"
  },
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.32.0",
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/debug": "^4.1.12",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^24.1.0",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.32.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "mock-fs": "^5.5.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "debug": "^4.4.1",
    "picocolors": "^1.1.1",
    "pnpm-workspace-yaml": "^1.1.0",
    "tinyglobby": "^0.2.14"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "pnpm",
    "catalog",
    "monorepo",
    "workspace",
    "dependencies",
    "cli"
  ]
}
